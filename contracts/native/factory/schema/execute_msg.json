{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecuteMsg",
  "oneOf": [
    {
      "description": "Update config",
      "type": "object",
      "required": [
        "update_config"
      ],
      "properties": {
        "update_config": {
          "type": "object",
          "properties": {
            "admin": {
              "type": [
                "string",
                "null"
              ]
            },
            "creation_fee": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0.0
            },
            "memory_contract": {
              "type": [
                "string",
                "null"
              ]
            },
            "module_factory_address": {
              "type": [
                "string",
                "null"
              ]
            },
            "version_control_contract": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Creates the core contracts for the OS",
      "type": "object",
      "required": [
        "create_os"
      ],
      "properties": {
        "create_os": {
          "type": "object",
          "required": [
            "governance"
          ],
          "properties": {
            "governance": {
              "description": "Governance details TODO: add support for other types of gov.",
              "allOf": [
                {
                  "$ref": "#/definitions/GovernanceDetails"
                }
              ]
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "GovernanceDetails": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "monarchy"
          ],
          "properties": {
            "monarchy": {
              "type": "object",
              "required": [
                "monarch"
              ],
              "properties": {
                "monarch": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "multi_signature"
          ],
          "properties": {
            "multi_signature": {
              "type": "object",
              "required": [
                "members",
                "threshold_votes",
                "total_members"
              ],
              "properties": {
                "members": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "threshold_votes": {
                  "type": "integer",
                  "format": "uint8",
                  "minimum": 0.0
                },
                "total_members": {
                  "type": "integer",
                  "format": "uint8",
                  "minimum": 0.0
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "token_weighted"
          ],
          "properties": {
            "token_weighted": {
              "type": "object",
              "required": [
                "token_addr"
              ],
              "properties": {
                "token_addr": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
