{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "oneOf": [
    {
      "description": "Queries enabled modules of some OS",
      "type": "object",
      "required": [
        "query_enabled_modules"
      ],
      "properties": {
        "query_enabled_modules": {
          "type": "object",
          "required": [
            "os_address"
          ],
          "properties": {
            "os_address": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Queries address of OS manager module",
      "type": "object",
      "required": [
        "query_os_address"
      ],
      "properties": {
        "query_os_address": {
          "type": "object",
          "required": [
            "os_id"
          ],
          "properties": {
            "os_id": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Queries contract code_id",
      "type": "object",
      "required": [
        "query_code_id"
      ],
      "properties": {
        "query_code_id": {
          "type": "object",
          "required": [
            "module"
          ],
          "properties": {
            "module": {
              "$ref": "#/definitions/ModuleInfo"
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "ModuleInfo": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}
